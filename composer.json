        "nyholm/psr7": "^1.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.13.0",
        "guzzlehttp/psr7": "^1.2",
        "phpunit/phpunit": "^9.5.26",
        "symfony/http-foundation": "^v6.1.8",
        "symfony/psr-http-message-bridge": "^v2.1.3",
        "laminas/laminas-diactoros": "^2.22.0"
    }
}
