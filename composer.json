{
    "name": "99designs/http-signatures",
    "description": "Sign and verify HTTP messages",
    "keywords": ["http", "https", "signing", "signed", "signature", "hmac"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Annesley",
            "email": "paul@99designs.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HttpSignatures\\": "src/"
        }
    },
    "autoload-dev": {
